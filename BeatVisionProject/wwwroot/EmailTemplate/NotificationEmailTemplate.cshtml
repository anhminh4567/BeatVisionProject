@using System.Text;
@model Shared.Poco.NotificationEmailModel
@{
	var title = Model.Title;
	var content = Model.Content;
	var dateSend = Model.SendTime.ToString();
	var weight = Model.Weight;
	var type = Model.NotificationType;
	var user = Model.UserToSend;
	var name = user?.Fullname is null ? "test user" : user?.Fullname;
	var logoBase64 = "data:image/png;base64,"+ Model.LogoImgBase64;
}
<!DOCTYPE html>
<html>
<head>
	<style>
		body {
			font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
			box-sizing: border-box;
			font-size: 14px;
			background-color: transparent;
			margin: 0;
		}

		.body-wrap {
			width: 100%;
			background-color: transparent;
			margin: 0;
		}

		.content {
			padding: 20px;
			width: 100%;
		}

		.main {
			border: 1px solid rgba(130, 134, 156, 0.15);
		}

		.alert-primary {
			padding: 20px;
			border-radius: 0;
			background-color: #007bff;
			color: white;
		}

		.alert-dark {
			color: #fff;
			background-color: #212f56;
			padding: 20px;
			border-radius: 0;
		}

		.content-wrap {
			padding: 20px;
		}

		.content-block {
			font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
			font-size: 14px;
			padding: 10px;
		}

		.btn-primary {
			font-size: 14px;
			text-decoration: none;
			line-height: 2em;
			font-weight: bold;
			text-align: center;
			cursor: pointer;
			display: block;
			border-radius: 5px;
			text-transform: capitalize;
			border: none;
			padding: 10px 20px;
			background-color: #007bff;
			color: #fff;
		}
	</style>
</head>
<body >
	<table class="body-wrap " style="width: 100%;
			background-color: transparent;
			margin: 0;">
		<tbody>
			<tr style="display: flex; justify-content: center;">
				<td width="600" style="display: block; max-width: 600px; clear: both; margin: 0 auto;" valign="top">
					<div class="content" >
						<table class="main" width="100%" cellpadding="0" cellspacing="0" bgcolor="transparent" style="border: 1px solid rgba(130, 134, 156, 0.15);">
							<tbody>
								<tr>
									<td class="alert-primary" align="center" valign="top">
										<img class="dsf" style="margin-left: auto; margin-right: auto; display: block; width: 60px" src="cid:logo" alt="no image found"/>
									</td>
								</tr>
								<tr>
									<td class="alert-dark" align="center" valign="top" >
										<p>@title</p>
										<p>Dear @name</p>
									</td>
									
								</tr>
								<tr>
									<td class="content-wrap" valign="top" style="padding: 20px;">
										<table width="100%" cellpadding="0" cellspacing="0">
											<tbody>
												<tr>
													<td class="content-block" valign="top" >
														<strong>TO : @type</strong>
													</td>
												</tr>

												<tr>
													<td class="content-block" valign="top" s>
														<strong>WEIGHT: @weight</strong>

													</td>
												</tr>
												<tr>
													<td>
														<strong>DateSend: @dateSend</strong>
													</td>
												</tr>
												<tr>
													<td class="content-block" valign="top" >
														@content
													</td>
												</tr>
												@{
												if (Model.TrackToPublish is not null)
												{
												<tr>
												<td>
												<div class="" style="display: flex ;  flex-direction: row; justify-content: center">
												<img src="@(Model.TrackToPublish.ProfileBlobUrl)" style="margin: 0; display: block; width: 100px; border: 1px solid black" />
												<div style=" border: 1px solid black; padding: 1px solid black ; margin-left: 20px">
												<h4>@(Model.TrackToPublish.TrackName)</h4>
												</div>

												</div>
												</td>
												</tr>
												}
												}
												<tr>
													<td class="content-block" valign="top" style="text-align: center;">
														Thanks for Subcribe to our servcie
													</td>
												</tr>
											</tbody>
										</table>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				</td>
			</tr>
		</tbody>
	</table>
</body>
</html>s
